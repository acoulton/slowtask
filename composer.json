{
    "name":        "acoulton/slowtask",
    "description": "KO3 module providing a user interface for monitoring and interrupting slow-running tasks",
    "keywords":    ["kohana"],
    "homepage":    "https://github.com/acoulton/slowtask",
    "type":        "kohana-module",
    "license":     "BSD",
    "authors":     [
        {
            "name":     "Andrew Coulton",
            "email":    "andrew@ingenerator.com",
            "homepage": "http://www.ingenerator.com"
        }
    ],
    "require": {
        "php":           ">=5.3.3",
        "kohana/core":   "3.3.*"
    },
    "require-dev": {
        "kohana/koharness": "*@dev",
        "kohana/unittest":  "3.3.*@dev"
    },
    "support": {
        "issues": "https://github.com/acoulton/slowtask/issues",
        "source": "https://github.com/acoulton/slowtask"
    },
    "bin": [],
    "extra": {
        "branch-alias": {
            "dev-3.3/master": "3.3.x-dev"
        },
        "installer-paths": {
            "vendor/{$vendor}/{$name}": ["type:kohana-module"]
        }
    },
    "config": {
        "preferred-install": "dist"
    }
}
